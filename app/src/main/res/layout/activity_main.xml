<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.fhodun.zadanie4.DrawingTextureView
        android:id="@+id/drawingView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/bottom_bar_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <View
            android:id="@+id/btnRed"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/draw_red"
            android:contentDescription="@string/color_red" />

        <View
            android:id="@+id/btnYellow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:background="@color/draw_yellow"
            android:contentDescription="@string/color_yellow" />

        <View
            android:id="@+id/btnBlue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:background="@color/draw_blue"
            android:contentDescription="@string/color_blue" />

        <View
            android:id="@+id/btnGreen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:background="@color/draw_green"
            android:contentDescription="@string/color_green" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:text="@string/clear" />

    </LinearLayout>

</LinearLayout>
